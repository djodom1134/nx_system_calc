# =============================================================================
# Nx System Calculator - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./nx_calculator.db
# For Docker/Production use PostgreSQL:
# DATABASE_URL=postgresql://nx_user:nx_password@db:5432/nx_calculator

# Docker database password (used by docker-compose)
DB_PASSWORD=nx_password

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
# Set to false in production:
# API_RELOAD=false

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Configuration Directory (IMPORTANT for Docker/AWS deployment)
# -----------------------------------------------------------------------------
# Path to config directory containing resolutions.json, codecs.json, etc.
# For Docker: CONFIG_DIR=/app/config
# For local dev: leave empty to use default relative path
CONFIG_DIR=

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# For production, add your domain:
# CORS_ORIGINS=["https://yourdomain.com","http://localhost:5173"]

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@networkoptix.com
SMTP_BCC=sales@networkoptix.com

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports
MAX_UPLOAD_SIZE=5242880

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Nx System Calculator
VITE_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_WEBHOOKS=false
ENABLE_ANALYTICS=false

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# For debugging: LOG_LEVEL=DEBUG

